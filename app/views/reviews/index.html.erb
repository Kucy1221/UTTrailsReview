<div id="page-content">
    <h1 class="text-center mt-4">Reviews</h1>
    <div class="container">
        <% @reviews.each do |review| %>
                <div class="row justify-content-md-center mt-4">
                    <div class="col-8">
                        <div class="card shadow" style="width: 100%;">
                          <div class="card-body">
                            <h5 class="card-title"><%= link_to review.title, review_path(review.id) %></h5>
                            <p class="card-text"><%= truncate(review.body, length: 100) %></p>
                            <%= link_to "Go to Review", review_path(review.id), class: "btn btn-primary" %>
                          </div>
                          <div class="card-footer text-muted">
                              <small> Created <%= time_ago_in_words(review.created_at) %> ago</small>
                          </div>
                        </div>
                    </div>
                </div>
        <% end %> 
    </div>
</div>