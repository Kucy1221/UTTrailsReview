<h1>Reviews Listing Page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @reviews.each do |review| %>
            <tr>
                <td><%= review.title %></td>
                <td><%= review.body %></td>
                <td><%= link_to 'Show', review_path(review.id), method: :get %></td>
                <td><%= link_to 'Delete', review_path(review.id), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>
