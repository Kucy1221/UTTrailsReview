<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= render 'shared/errors', obj: @review %>
        <%= form_with(model: @review, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="mb-3 row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of review" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label :body, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Review body goes here." %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label :rating, class: "col-2 col-form-label text-light" %>
          <%= f.radio_button :rating, 1%>
          <%= f.label :rating_1, 1%>
          <%= f.radio_button :rating, 2%>
          <%= f.label :rating_2, 2%>
          <%= f.radio_button :rating, 3%>
          <%= f.label :rating_3, 3%>
          <%= f.radio_button :rating, 4%>
          <%= f.label :rating_4, 4%>
          <%= f.radio_button :rating, 5%>
          <%= f.label :rating_5, 5%>
        </div>        
        <div class="row mb-3 justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-3" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to reviews listing ]', reviews_path, class: "btn btn-primary col-4 text-center" %>
  </div>
</div> 
