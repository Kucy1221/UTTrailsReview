<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
        <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, class: "shadow p-2 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row justify-content-center">
          <div class="col-8 mb-4 mt-4">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Display Name" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <div class="col-8 mb-4"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email Address" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <div class="col-8 mb-4"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>
        
        <div class="row form-group justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 
<div class="row justify-content-center">
 <%= link_to 'Cancel and return to home.', root_path, class: "btn btn-primary text-center" %>
</div>