 <div id="page-content">
    <h1 class="text-center mt-4">Log in</h1>
    
<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-2 mb-3 bg-dark rounded", local: true) do |f| %>

        <div class="form-group row justify-content-center">
          <div class="col-8 mt-4 mb-4"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email Address" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <div class="col-8 mb-4"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>
        
        <div class="row form-group justify-content-center">
          <%= f.submit "Log in" , class: "btn btn-outline-primary btn-lg col-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 
<div class="row justify-content-center">
 <%= link_to 'Cancel and return to home.', root_path, class: "btn btn-primary text-center" %>
</div>
</div>